<% provide(:title, @user.name) %>
<div>
  <div class="row">
    <div class="col-md-3">
    </div>
    <div class="col-md-9">
      <%= tabs_tag :open_tabs => { :class => "nav nav-tabs" }  do |tab| %>
        <%= tab.tweet      'Tweets', ""%>
        <%= tab.followers 'Followers', followers_user_path %>
        <%= tab.following   'Following', following_user_path%> 
      <% end %>
    </div>
  </div>
</div>
<div class="row">
  <aside class="col-md-3">
    <section class="user_info">
      <div class="pro_border">
        <%= gravatar_for @user,200 %>
      </div>
    </section>
    <section class="stats">
      <%= @user.name %>
      <%= render 'shared/stats' %>
    </section>

  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <div class="microblock">
        <h3>Microposts (<%= @user.microposts.count %>)</h3>
        <ol class="microposts">
          <%= render @microposts %>
        </ol>
        <%= will_paginate @microposts %>
      </div>
    <% end %>
  </div>
</div>
