%div
  .row.card
    .col-md-3
    .col-md-7
      %ul.nav.nav-tabs
        %li
          = link_to user_path, :class => "text_center" do
            %span Tweets
            %br/
            %span= @user.microposts.count
        %li.active
          = link_to followers_user_path, :class => "text_center"  do
            %span Followers
            %br/
            %span= @user.followers.count
        %li
          = link_to following_user_path, :class => "text_center"  do
            %span Following
            %br/
            %span= @user.following.count
.row
  %aside.col-md-3
    %section.user_info
      .pro_border
        = gravatar_for @user,200
    %section.stats
      = @user.name
      = render 'shared/stats'
  .col-md-9
    .cardtweet
      %h4= @title
    - if @users.any?
      %ul.users.follow.row.card
        = render @users
      = will_paginate
