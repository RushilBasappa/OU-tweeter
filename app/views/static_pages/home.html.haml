- if logged_in?
  .row
    %aside.col-md-3.card.profile-card
      %section.user_info
        = render 'shared/user_info'
      %section.stats
        = render 'shared/stats'
      %button.btn.btn-info.btn-lg{"data-target" => "#myModal", "data-toggle" => "modal", :type => "button"} Compose Post
      #myModal.modal.fade{:role => "dialog"}
        .modal-dialog
          .modal-content
            .modal-header
              %button.close{"data-dismiss" => "modal", :type => "button"} Ã—
              %h4.modal-title Compose new post
            .modal-body
              = render 'shared/micropost_form'
      %section.micropost_form
    .col-md-9
      .cardtweet
        %h3 Post Feed
      = render 'shared/feed'
- else
